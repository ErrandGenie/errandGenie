<%- include("partials/pagesHeader") -%>

<!-- Main Body -->
<main>
  <div class="container main">
    <div class="row">
      <div class="col-md-8">
        <!-- Heading -->
        <h3>Dashboard</h3>
        <hr />
        <!-- End of Heading  -->
        <!-- Jumbotron -->
        <div class="jumbotron jumbotron-fluid">
          <div class="container">
            <h1 class="display-4">Welcome <%=user %> !</h1>
            <p class="lead">
              How are you doing today? Select a task to begin...
            </p>
          </div>
          <!--End of jumbotron container-->
        </div>
        <!--End of Jumbotron-->
        <!-- Jumbotron Image -->
        <div class="jumbo-img float-right">
          <img src="../images/undraw_Mobile_app_p3ts.svg" alt="Welcome" />
        </div>
        <!--End of jumbotron image-->
        <div class="row cards">
          <div class="col-xs-6">
            <div class="row flex-nowrap">
              <div class="icon" style="background-color: rgb(1, 100, 100)">
                <i class="fas fa-tags"></i>
              </div>
              <!--End of icon div-->
              <div class="body" style="background-color: teal">
                <p>Total Orders</p>

                <h6>0</h6>
              </div>
              <!--End of body div-->
            </div>
            <!--End of nowrap row-->
          </div>
          <!--end of first col-xs-6-->
          <div class="col-xs-6">
            <div class="row flex-nowrap">
              <div class="icon" style="background-color: rgb(214, 61, 5)">
                <i class="fas fa-truck-loading"></i>
              </div>
              <!--End of icon div-->
              <div class="body" style="background-color: orangered">
                <p>Total Movement</p>
                <h6>0</h6>
              </div>
              <!--End of body div-->
            </div>
            <!--End of nowrap row-->
          </div>
          <!--end of second col-xs-6-->
          <div class="col-xs-6">
            <div class="row flex-nowrap">
              <div class="icon" style="background-color: rgb(211, 141, 12)">
                <i class="fas fa-shopping-basket"></i>
              </div>
              <!--End of icon div-->
              <div class="body" style="background-color: orange">
                <p>Total Errands</p>
                <h6>0</h6>
              </div>
              <!--End of body div-->
            </div>
            <!--End of nowrap row-->
          </div>
          <!--End of third col-xs-6-->
          <div class="col-xs-6">
            <div class="row flex-nowrap">
              <div class="icon" style="background-color: rgb(78, 4, 253)">
                <i class="fas fa-biking"></i>
              </div>
              <!--End of icon div-->
              <div class="body" style="background-color: rgb(137, 105, 252)">
                <p>Total Delivery</p>
                <h6>0</h6>
              </div>
              <!--End of body div-->
            </div>
            <!--End of nowrap row-->
          </div>
          <!--End of col-xs-6-->
        </div>
        <!--End of cards div-->

        <!-- Recent Task -->
        <div class="inline">
          <h4>Recent Tasks</h4>
          <span>View All</span>
        </div>
        <div class="box">
          <h6>No Recent Task Task</h6>
          <span><i class="fas fa-clock"></i> 11/3/2020 2:56 PM</span>
        </div>
        <!--End of box div -->
      </div>
      <!--End of col-md-8-->

      <!-- Second Column -->
      <div class="col-md-4">
        <div class="better">
          <!-- Calender -->
          <iframe
            src="https://calendar.google.com/calendar/embed?src=v9c0f7n1nojmhntus0ms9oqs18%40group.calendar.google.com&ctz=Africa%2FAccra"
            style="border: 0"
            width="800"
            height="600"
            frameborder="0"
            scrolling="no"
          ></iframe>
          <!-- New Tasks -->
          <div class="inline">
            <h4>Your Tasks</h4>
            <span>View All</span>
          </div>
          <!--End of inline div-->
          <div class="box">
            <h6>You don't have any Task</h6>
            <span><i class="fas fa-clock"></i> 11/3/2020 2:56 PM</span>
          </div>
          <!--End of box div-->

          <!--Div that will hold the pie chart-->
          <div id="chart_div" style="margin-top: 0"></div>
        </div>
        <!--End of better-->
      </div>
      <!--End of col-md-4-->
    </div>
    <!--End of row -->
  </div>
  <!--End of container main-->
</main>

<!-- Main Body -->

<%- include("partials/pagesFooter") -%>

<%- include("partials/pagesHeader") -%>

<!-- Main Body -->
<main>
  <div class="container main">
    <div class="row">
      <div class="col-md-8">
        <!-- Heading -->
        <h3>Market Shopping</h3>
        <hr />
        <!-- End of Heading  -->

        <div class="delivery">
          <!-- Market shopping form -->
          <form>
            <div class="form-group">
              <label for="location">Town/City</label>
              <select class="form-control" id="location">
                <option>Ho</option>
                <option>Accra</option>
                <option>Kumasi</option>
              </select>
            </div>
            <div class="form-group">
              <label for="select-errand">Preferred Mall or Shop</label>
              <select class="form-control" id="select errand">
                <option>Ho Central Market</option>
                <option>Stadium Gate Shopping Centre</option>
                <option>Melcom</option>
              </select>
            </div>
            <div class="row">
              <div class="form-group col-md-5">
                <label for="Item List">Item</label>
                <input
                  type="text"
                  class="form-control"
                  id="fname"
                  placeholder="Add item"
                  name="fname"
                  required
                />
              </div>
              <div class="form-group col-md-2">
                <label for="Item List">Quantity</label>
                <input
                  type="number"
                  class="form-control"
                  id="fname"
                  name="Quantity"
                />
              </div>
              <div class="form-group col-md-3">
                <label for="Item List">Unit Price(GHâ‚µ)</label>
                <input
                  type="number"
                  class="form-control"
                  id="fname"
                  name="Unit Price"
                />
              </div>
              <div class="form-group col-md-2 add-new-btn">
                <input
                  type="submit"
                  class="btn btn-primary btn-sm"
                  value="*New item"
                  name="*New item"
                />
              </div>
            </div>
            <div class="form-group">
              <label for="instructions">Instructions</label>
              <textarea
                class="form-control"
                name="instructions"
                id=""
                cols="10"
                rows="7"
              ></textarea>
              <small class="form-text text-muted">Tell us what to do</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <!-- End of market shopping form -->
        </div>
        <!--End of background div-->
      </div>
      <!--End of col-md-8-->

      <!-- Second Column -->
      <div class="col-md-4">
        <div class="better">
          <!-- Calender -->
          <iframe
            src="https://calendar.google.com/calendar/embed?src=v9c0f7n1nojmhntus0ms9oqs18%40group.calendar.google.com&ctz=Africa%2FAccra"
            style="border: 0"
            width="800"
            height="600"
            frameborder="0"
            scrolling="no"
          ></iframe>
          <!-- New Tasks -->
          <div class="inline">
            <h4>Your Tasks</h4>
            <span>View All</span>
          </div>
          <!--End of inline div-->
          <div class="box">
            <h6>You don't have any Task</h6>
            <span><i class="fas fa-clock"></i> 11/3/2020 2:56 PM</span>
          </div>
          <!--End of box div-->

          <!--Div that will hold the pie chart-->
          <div id="chart_div" style="margin-top: 0"></div>
        </div>
        <!--End of better-->
      </div>
      <!--End of col-md-4-->
    </div>
    <!--End of row -->
  </div>
  <!--End of container main-->
</main>

<!-- Main Body -->
<%- include("partials/pagesFooter") -%>

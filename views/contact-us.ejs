<section id="layer1">
  <div class="container page">
    <div class="row">
      <div class="col-md-6">
        <form>
          <div class="contact-form">
            <div class="form-group">
              <label class="control-label col-sm-4" for="fname">First Name:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="fname" placeholder="e.g. Ama" name="fname" />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-4" for="lname">Last Name:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="lname" placeholder=" e.g. Koomson" name="lname" />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="email">Email:</label>
              <div class="col-sm-10">
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  placeholder="e.g. amakoomson@gmail.com"
                  name="email"
                />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="comment">Message:</label>
              <div class="col-sm-10">
                <textarea class="form-control" rows="5" id="comment" placeholder="Tell us something..."></textarea>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-4 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6 enquiries">
        <h4>General enquiries</h4>
        <div class="address">
          <div class="row">
            <div class="col-md-1">
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="col-md-8">
              <h6>Address</h6>
              <p>PMB 1000, Ho-Volta Region</p>
            </div>
          </div>
        </div>
        <div class="phone">
          <div class="row">
            <div class="col-md-1">
              <i class="fas fa-phone" aria-hidden="true"></i>
            </div>
            <div class="col-md-8">
              <h6>Phone</h6>
              <p>+233 200418826</p>
            </div>
          </div>
        </div>
        <div class="mail">
          <div class="row">
            <div class="col-md-1"><i class="fas fa-envelope"></i></div>
            <div class="col-md-10">
              <h6>Email</h6>
              <p>errandgenie@gmail.com</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<%- include("partials/pagesHeader") -%>

<!-- Main Body -->
<main>
  <div class="container main">
    <div class="row">
      <div class="col-md-8">
        <!-- Heading -->
        <h3>Delivery</h3>
        <hr />
        <!-- End of Heading  -->
        <div class="delivery">
          <form>
            <div class="form-row">
              <h3 class="form-group col-md-12">Pick-up</h3>
              <div class="form-group col-md-6">
                <label for="pick-up-location">Pick-up Location</label>
                <span
                  class="fas fa-map-marker-alt field-icon toggle-password position-absolute"
                ></span>
                <input
                  type="location"
                  class="form-control"
                  id="pick-up-location"
                  placeholder="Pick-up location"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="time">Pick-up Time</label>
                <input type="datetime-local" class="form-control" id="time" />
              </div>
            </div>
            <div class="form-row mb-3">
              <div class="form-group col-md-6">
                <label for="pick-up-contact">Pick-up Contact Person</label>
                <span
                  class="fa fa-user field-icon toggle-password position-absolute"
                ></span>
                <input
                  type="text"
                  class="form-control"
                  id="pick-up-contact"
                  placeholder="Pick-up contact"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="phone-number">Phone number</label>
                <span
                  class="fa fa-phone field-icon toggle-password position-absolute"
                ></span>
                <input type="tel" class="form-control" id="phone" />
              </div>
            </div>

            <div class="form-row">
              <h3 class="form-group col-md-12">Drop-off</h3>
              <div class="form-group col-md-12">
                <label for="pick-up-location">Drop-off Location</label>
                <span
                  class="fas fa-map-marker-alt field-icon toggle-password position-absolute"
                ></span>
                <input
                  type="location"
                  class="form-control"
                  id="pick-up-location"
                  placeholder="Drop-off location"
                />
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="drop-off-contact">Drop-off Contact Person</label>
                <span
                  class="fa fa-user field-icon toggle-password position-absolute"
                ></span>
                <input
                  type="text"
                  class="form-control"
                  id="pick-up-contact"
                  placeholder="Drop-off contact"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="phone-number">Phone number</label>
                <span
                  class="fa fa-phone field-icon toggle-password position-absolute"
                ></span>
                <input type="tel" class="form-control" id="phone" />
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="description">Item description</label>
                <textarea
                  class="form-control"
                  id="description"
                  rows="3"
                  placeholder="Describe the item to be delivered..."
                ></textarea>
              </div>
              <div class="form-group col-md-6">
                <label for="file">Attach image</label>
                <input type="file" class="form-control-file" id="File" />
              </div>
            </div>

            <button
              type="button"
              class="btn btn-primary"
              data-toggle="modal"
              data-target="#modalLoginAvatar"
            >
              Proceed
            </button>
          </form>
        </div>
      </div>

      <!-- Second Column -->
      <div class="col-md-4">
        <div class="better">
          <!-- Calender -->
          <iframe
            src="https://calendar.google.com/calendar/embed?src=v9c0f7n1nojmhntus0ms9oqs18%40group.calendar.google.com&ctz=Africa%2FAccra"
            style="border: 0"
            width="800"
            height="600"
            frameborder="0"
            scrolling="no"
          ></iframe>
          <!-- New Tasks -->
          <div class="inline">
            <h4>Your Tasks</h4>
            <span>View All</span>
          </div>
          <!--End of inline div-->
          <div class="box">
            <h6>You don't have any Task</h6>
            <span><i class="fas fa-clock"></i> 11/3/2020 2:56 PM</span>
          </div>
          <!--End of box div-->

          <!--Div that will hold the pie chart-->
          <div id="chart_div" style="margin-top: 0"></div>
        </div>
        <!--End of better-->
      </div>
      <!--End of col-md-4-->
    </div>
    <!--End of row -->
  </div>
  <!--End of container main-->
</main>

<!-- Main Body -->

<%- include("partials/pagesFooter") -%>
